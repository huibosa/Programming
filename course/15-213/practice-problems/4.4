long rsum(long *start, long count) {
    if (count <= 0)
        return 0;
    return *start + rsum(start+1, count-1);
}
-----------------------------------------------------

rsum:
  irmovq $8, %r8
  irmovq $0, %r9
  irmovq $-1, %r10

  xorq %rax, %rax             # ret = 0

  subq %r9, %rsi
  jle done                    # test (count <= 0)

  pushq %rbx
  mrmovq (%rdi), %rbx         # save *start
  addq %r8, %rdi              # start = start + 1
  addq %r10, %rsi             # count = count - 1
  call rsum
  addq %rbx, %rax             # *start + rsum(...)
  pushq %rbx
done:
  ret
